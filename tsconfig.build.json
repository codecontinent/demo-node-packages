{
  "exclude": ["**/*.test.ts", "**/*.spec.ts", "node_modules", "dist"],
  "compilerOptions": {
    "target": "ES5",
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "paths": {
      "@cc/*": ["./packages/*"]
    }
  }
}
